@model DayOfFun.Model.User

@{
    ViewData["Title"] = "Login";
    ViewBag.Title = "Day of fun";
    Layout = "_AuthLayout";
}

<div class="row loginForm">
    <div class="col-md-8 col-md-offset-2">
        <h2>Please log in before placing an order.</h2>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
            <h4>Enter your details below</h4>
            <hr />
            
            <div class="form-group">
                <label asp-for="PasswordHash" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pull-right formPullRightButton">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Log in" />
                </div>
            </div>
        </form>
    </div>
</div>