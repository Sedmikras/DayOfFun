@model DayOfFun.Models.DB.Question

<div class="modal fade" id="addUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Questions</h4>
                <button type="button" class="close btn-close" data-dismiss="modal"></button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="modal-body">
                <form action="Update" onsubmit="event.preventDefault();">
                    <div class="form-group">
                        <label asp-for="Text"></label>
                        <input asp-for="Text" class="searchBox autocomplete"/>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>